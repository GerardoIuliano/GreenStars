<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="20dp"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <TextView
                    android:gravity="center"
                    android:textSize="20dp"
                    android:paddingBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:text="Consiglio"/>
                <TextView
                    android:textAlignment="center"
                    android:background="#000000"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/consiglio"/>

                <ImageView
                    android:id="@+id/img_consiglio"
                    android:layout_width="wrap_content"
                    android:layout_height="916px"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/consiglio_posizione"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:paddingBottom="80dp">




            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id = "@+id/buttonMisura"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text ="  MISURA"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:backgroundTint="#FFFFFF"
                android:onClick="apriFotocamera"
                />
            </LinearLayout>

    </RelativeLayout>

</FrameLayout>